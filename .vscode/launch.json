{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Playwright: Debug Active Spec",
            "runtimeExecutable": "npx",
            "args": [
                "playwright",
                "test",
                "--project=chromium",
                "--headed",
                "test/forge/features/${fileBasename}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "BASE_URL": "http://localhost:5173"
            }
        }
    ]
}